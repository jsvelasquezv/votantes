<%= form_for @votante, html: {class: 'form-horizontal'} do |f| %>
<% if @votante.errors.any? %>
<div class="alert alert-danger alert-dismissible" role = "alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <% @votante.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
</div>
<% end %>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="col-md-6">      
    <div class="form-group">
      <%= f.label :nombres, class: 'col-md-3'%>
      <div class="col-md-8">
        <%= f.text_field :nombres, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :apellidos, class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :apellidos, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :cedula, class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :cedula, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :direccion, class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :direccion, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :barrio, class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :barrio, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :comuna, class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :comuna, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :puesto, class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :puesto, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :mesa, class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :mesa, class: 'form-control' %>
      </div>
    </div>
    </div>
    <div class="col-md-6 ">
    <div class="form-group">
      <%= f.label :celular, class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :celular, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :fijo, class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :fijo, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :estadoCivil, 'Estado civil', class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :estadoCivil, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :hijos, 'Numero de hijos', class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :hijos, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :fechaNacimiento, 'Fecha de nacimiento', class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :fechaNacimiento, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :profesion, class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :profesion, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :hobby, class: 'col-md-3' %>
      <div class="col-md-8">
        <%= f.text_area :hobby, class: 'form-control' %>
      </div>
    </div>
    </div>
    <div class="actions">
      <%= f.submit 'Aceptar', class: 'btn btn-primary'%>
    </div>
  </div>
</div>
<% end %>
